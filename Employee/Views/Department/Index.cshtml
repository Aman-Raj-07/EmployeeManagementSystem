@model List<department> 

<div class="row">
	<div class="col-6"><h2>Departments</h2></div>
	<div class="col-6 text-end">
		<a asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i>  Create New Department
		</a>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<th>Id</th>
		<th>Department Name</th>
		<th>Modification</th>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.name</td>
				<td> 
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Department" asp-action="Edit" asp-route-id = "@item.id" class="btn btn-info mx-2" >
							<i class="bi bi-pencil-square"></i>Edit
						</a>
						<a asp-controller="Department" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i>Delete
						</a>
						<a asp-controller="Employee" asp-action="Index" asp-route-id="@item.id" class="btn btn-primary mx-2">
							<i class="bi bi-people-fill"></i>Employees
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
@model EmployeeVM

<div class="row">
	<div class="col-6"><h2>Employees</h2></div>
	<div class="col-6 text-end">
		<a asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i>  Add New Employee
		</a>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
	<th>Name</th>
	<th>Gender</th>
	<th>City</th>
	<th>Mobile</th>
	<th>Salary</th>
	<th>Department</th>
	<th>Action</th>
	</thead>
	<tbody>
		@foreach (var item in Model.EmpVM)
		{
			<tr>
				<td>@item.name</td>
				<td>@item.gender</td>
				<td>@item.city</td>
				<td>@item.mobile</td>
				<td>@item.salary</td>
				<td>
					@foreach (var dept in Model.departmentVM)
					{
						if (dept.id == item.departmentId)
						{
							@dept.name
						}
					}
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.id" class="btn btn-info mx-2">
							<i class="bi bi-pencil-square"></i>Edit
						</a>
						<a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i>Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>